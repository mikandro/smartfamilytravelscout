# =============================================================================
# CORE INFRASTRUCTURE
# =============================================================================

# Database Configuration
DATABASE_URL=postgresql+asyncpg://travelscout:travelscout_password@localhost:5432/travelscout

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration (defaults to Redis if not specified)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

APP_NAME=SmartFamilyTravelScout
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=development

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# =============================================================================
# API KEYS
# =============================================================================

# AI Services (REQUIRED for scoring and analysis)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Travel Services (OPTIONAL - free scrapers available without keys)
# Kiwi.com API - 100 calls/month free tier (https://tequila.kiwi.com/)
KIWI_API_KEY=your_kiwi_api_key_here

# Eventbrite API - for event scraping (https://www.eventbrite.com/platform/api)
EVENTBRITE_API_KEY=your_eventbrite_api_key_here

# Apify API - for Airbnb scraping (https://apify.com/)
APIFY_API_KEY=your_apify_api_key_here

# =============================================================================
# EMAIL/SMTP CONFIGURATION
# =============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@smartfamilytravelscout.com
SMTP_FROM_NAME=SmartFamilyTravelScout

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================

SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# BUSINESS LOGIC SETTINGS
# =============================================================================

# Price Thresholds (in EUR)
MAX_FLIGHT_PRICE_PER_PERSON=200
MAX_ACCOMMODATION_PRICE_PER_NIGHT=150
MIN_DEAL_SCORE=7.0

# Geographic Settings
DEFAULT_DEPARTURE_AIRPORTS=VIE,BTS,PRG
DEFAULT_SEARCH_RADIUS_KM=500

# Time Settings
TIMEZONE=Europe/Vienna
DEFAULT_TRIP_DURATION_DAYS=7
ADVANCE_BOOKING_DAYS=60

# =============================================================================
# PERFORMANCE & CACHING
# =============================================================================

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Settings (in seconds)
CACHE_TTL_FLIGHTS=3600
CACHE_TTL_ACCOMMODATIONS=7200
CACHE_TTL_EVENTS=86400

# =============================================================================
# FEATURE FLAGS
# =============================================================================

ENABLE_SCRAPING=True
ENABLE_AI_SCORING=True
ENABLE_NOTIFICATIONS=True
ENABLE_METRICS=True
