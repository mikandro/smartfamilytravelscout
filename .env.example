# Database Configuration
DATABASE_URL=postgresql+asyncpg://travelscout:travelscout_password@localhost:5432/travelscout

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Application Settings
APP_NAME=SmartFamilyTravelScout
APP_VERSION=0.1.0
DEBUG=False
LOG_LEVEL=INFO
ENVIRONMENT=development

# API Keys - Travel Services
KIWI_API_KEY=your_kiwi_api_key_here
SKYSCANNER_API_KEY=your_skyscanner_api_key_here
AMADEUS_API_KEY=your_amadeus_api_key_here
AMADEUS_API_SECRET=your_amadeus_api_secret_here
EVENTBRITE_API_KEY=your_eventbrite_api_key_here
APIFY_API_KEY=your_apify_api_key_here

# API Keys - AI Services
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Email/SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
SMTP_FROM_EMAIL=noreply@smartfamilytravelscout.com
SMTP_FROM_NAME=SmartFamilyTravelScout

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# Scraping Configuration
SCRAPER_MAX_RETRIES=3
SCRAPER_TIMEOUT=30
SCRAPER_USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Scraping Delays (in seconds/milliseconds)
# These control timing between requests and page loads
# For testing, set these to 0.1 to speed up tests significantly
SCRAPER_PAGE_LOAD_DELAY=2.0          # Delay after page navigation (seconds)
SCRAPER_REQUEST_DELAY=1.0            # Base delay between requests (seconds)
SCRAPER_ACTION_DELAY=1.0             # Delay after user actions like clicks (seconds)
SCRAPER_DYNAMIC_CONTENT_TIMEOUT=3000 # Timeout for dynamic content (milliseconds)
SCRAPER_MIN_REQUEST_INTERVAL=3.0     # Minimum time between requests (seconds)
SCRAPER_MAX_REQUEST_INTERVAL=7.0     # Maximum time between requests (seconds)

# Price Thresholds (in EUR)
MAX_FLIGHT_PRICE_PER_PERSON=200
MAX_ACCOMMODATION_PRICE_PER_NIGHT=150
MIN_DEAL_SCORE=7.0

# Geographic Settings
DEFAULT_DEPARTURE_AIRPORTS=VIE,BTS,PRG
DEFAULT_SEARCH_RADIUS_KM=500

# Time Settings
TIMEZONE=Europe/Vienna
DEFAULT_TRIP_DURATION_DAYS=7
ADVANCE_BOOKING_DAYS=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Cache Settings
CACHE_TTL_FLIGHTS=3600
CACHE_TTL_ACCOMMODATIONS=7200
CACHE_TTL_EVENTS=86400

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Feature Flags
ENABLE_SCRAPING=True
ENABLE_AI_SCORING=True
ENABLE_NOTIFICATIONS=True
ENABLE_METRICS=True

# AWS Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=travelscout-data

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1
